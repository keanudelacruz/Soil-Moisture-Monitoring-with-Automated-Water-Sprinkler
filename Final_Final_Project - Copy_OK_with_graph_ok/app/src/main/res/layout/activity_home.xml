<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:orientation="vertical"
    android:gravity="start"
    android:background="@drawable/bg"
    android:id="@+id/ll">

    <!--Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:alpha="0.8"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="start"
            android:src="@drawable/agency" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/home_title"
            android:textAlignment="center"
            android:textColor="@color/colorGreen"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!--Row 2 -->
    <LinearLayout
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center">
        <LinearLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="350dp"
            android:layout_height="75dp"
            android:background="#fff"
            android:id="@+id/card_inbox">
            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:padding="8dp"
                android:layout_margin="10dp"
                android:background="@drawable/circle_button"
                android:src="@drawable/inbox" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="23dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Device messages" />
        </LinearLayout>
    </LinearLayout>

    <!--Row 3-->
    <LinearLayout
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <LinearLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="350dp"
            android:layout_height="75dp"
            android:background="#fff"
            android:id="@+id/card_visualizer">
            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:padding="8dp"
                android:layout_margin="10dp"
                android:background="@drawable/circle_button"
                android:src="@drawable/visualizer" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="23dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Visualizer"/>
        </LinearLayout>
    </LinearLayout>

    <!--Row 4-->
    <LinearLayout
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <LinearLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="350dp"
            android:layout_height="75dp"
            android:background="#fff"
            android:id="@+id/card_totalirri">

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:padding="8dp"
                android:layout_margin="10dp"
                android:background="@drawable/circle_button"
                android:src="@drawable/listing"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Records"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>